<%
  rotate = properties.router.logrotate && properties.router.logrotate.rotate
  size = properties.router.logrotate && properties.router.logrotate.size
%>
/var/vcap/data/sys/log/gorouter/*.log /var/vcap/data/sys/log/gorouter/*/*.log {
  missingok
  rotate <%= rotate || 7 %>
  compress
  delaycompress
  copytruncate
  size=<%= size || "2M" %>
}
