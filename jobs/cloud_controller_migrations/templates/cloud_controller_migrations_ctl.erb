#!/bin/bash

export CC_JOB_DIR=/var/vcap/jobs/cloud_controller_migrations
export PATH=/var/vcap/packages/ruby/bin:$PATH

CC_PACKAGE_DIR=/var/vcap/packages/cloud_controller_ng

RUN_DIR=/var/vcap/sys/run/cloud_controller_migrations
LOG_DIR=/var/vcap/sys/log/cloud_controller_migrations
PIDFILE=$RUN_DIR/cloud_controller_migrations.pid

export CONFIG_DIR=$CC_JOB_DIR/config
export CLOUD_CONTROLLER_NG_CONFIG=$CONFIG_DIR/cloud_controller_ng.yml
export BUNDLE_GEMFILE=$CC_PACKAGE_DIR/cloud_controller_ng/Gemfile

export C_INCLUDE_PATH=/var/vcap/packages/libpq/include:$C_INCLUDE_PATH
export LIBRARY_PATH=/var/vcap/packages/libpq/lib:$LIBRARY_PATH
export LANG=en_US.UTF-8

source /var/vcap/packages/common/utils.sh

case $1 in

  start)
    pid_guard $PIDFILE "Cloud Controller migrations"

    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR

    chown vcap:vcap $RUN_DIR
    chown vcap:vcap $LOG_DIR

    cd $CC_PACKAGE_DIR/cloud_controller_ng

    chpst -u vcap:vcap bundle exec rake db:migrate \
        >>$LOG_DIR/db_migrate.stdout.log \
        2>>$LOG_DIR/db_migrate.stderr.log

    if [ $? != 0 ]; then
      echo "Migrations failed!"
      exit 1
    fi

    echo $$ > $PIDFILE

    chown vcap:vcap $PIDFILE

    while true; do
        echo "HEY BOSH WE NEED AN ABSTRACTION HERE"
        sleep 1
    done

    ;;

  stop)
    kill_and_wait $PIDFILE
    ;;

  *)
    echo "Usage: cloud_controller_jobs_ctl {start|stop}"
    ;;

esac
